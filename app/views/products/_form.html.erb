<center class="card">
  <div class="card-body" style="width: 50%">
    <%= form_with(model: product, local: true) do |form| %>
    <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, id: :product_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :template_id %>
      <%= form.collection_select :template_id, @templates, :id, :name, {}, id: "template", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :company %>
      <%= form.text_field :company, id: :product_company, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :properties %>
      <%= form.text_area :properties, id: :product_properties, id: "properties", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :year %>
      <%= form.number_field :year, id: :product_year, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :warranty %>
      <%= form.number_field :warranty, id: :product_warranty, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :warranty_end %>
      <%= form.date_field :warranty_end, id: :product_warranty_end, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :end_of_lifetime %>
      <%= form.number_field :end_of_lifetime, id: :product_end_of_lifetime, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :bill %>
      <%= form.file_field :bill, id: :product_bill, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit nil, class:"btn btn-outline-primary btn-sm" %>
    </div>
    <% end %>
  </div>
</center>
