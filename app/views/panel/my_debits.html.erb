<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="/"><%= t(:dashboard) %></a>
  </li>
  <li class="breadcrumb-item active"><%= t(:my_debits) %></li>
</ol>

<div class="card mb-3">
  <div class="card-header">
    <i class="fa fa-database"></i> <%= t(:listing_debits) %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th><%= t(:product) %></th>
            <th><%= t(:start_date) %></th>
            <th><%= t(:end_date) %></th>
            <th><%= t(:status) %></th>
          </tr>
        </thead>
        <tbody>
          <% @debits.each do |debit| %>
          <tr>
            <td><%= debit.product.name %></td>
            <td><%= debit.start || "-" %></td>
            <td><%= debit.end || "-" %></td>
            <td>
              <% if debit.pending? %>
              <% if debit.start.nil? %>
              <%= link_to t(:confirm_to_debit), confirm_my_debit_path(debit_id: debit.id) %>
              <% else %>
              <%= link_to t(:confirm_to_remove), confirm_my_debit_path(debit_id: debit.id) %>
              <% end %>
              <% else %>
              <%= t(debit.status) %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <center>
        <%= page_entries_info @debits %>
      </center>
      <center>
        <%= will_paginate @debits %>
      </center>
    </div>
  </div>
</div>
