    <!-- /Card Columns-->
  </div>
  <div class="col-lg-4">
    <!-- Example Pie Chart Card-->
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-pie-chart"></i> Pie Chart Example (D端zenlenecek)</div>
      <div class="card-body">
