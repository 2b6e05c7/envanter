<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="/"><%= t(:dashboard) %></a>
  </li>
  <li class="breadcrumb-item active"><%= t(:users) %></li>
</ol>

<div class="card mb-3">
  <div class="card-header">
    <i class="fa fa-user-circle"></i> <%= t(:listing_users) %></div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th><%= t(:full_name) %></th>
            <th><%= t(:email) %></th>
            <th><%= t(:role) %></th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.full_name %></td>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
              <td><%= link_to t(:show), "/panel/users/#{user.id}" %></td>
              <td><%= link_to t(:edit), nil %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <center>
        <%= page_entries_info @users %>
      </center>
      <center>
        <%= will_paginate @users %>
      </center>
    </div>
  </div>
</div>
