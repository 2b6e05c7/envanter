<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="/"><%= t(:dashboard) %></a>
  </li>
  <li class="breadcrumb-item active"><%= t(:templates) %></li>
</ol>

<div class="card mb-3">
  <div class="card-header">
    <i class="fa fa-group"></i> <%= t(:listing_templates) %>
    <div class="pull-right">
      <%= link_to t(:new_template), new_template_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @templates.each do |template| %>
            <tr>
              <td><b><u><%= link_to template.name, template %></u></b></td>
              <td><%= link_to t(:edit), edit_template_path(template) %></td>
              <td><%= link_to t(:delete), template, method: :delete, data: { confirm: t(:are_you_sure) } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
